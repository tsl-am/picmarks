<%= link_to "Add a New Picture", new_picture_path %>

<%= render 'form' %>

<ul>
<% @pictures.each do |picture| %>
  <li>
    <%= link_to image_tag(picture.url, :width => 60), picture_path(picture.id) %>
    <p><%= picture.title %><p>
    <nav>
      <%= link_to 'Details', picture_url(picture.id) %>
      |
      <%= link_to 'Edit', edit_picture_url(picture.id)  %>
      |
      <%= link_to 'Delete', picture_url(picture.id), :method => 'delete'  %>
    </nav>
  </li>
<% end %>
</ul>
